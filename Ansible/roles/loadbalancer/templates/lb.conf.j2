upstream backend {
{% for host in groups['webservers'] %}
    server {{ hostvars[host].ansible_host }}:80;
{% endfor %}
}

server {
    listen 80;

    location / {
        proxy_pass http://backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}

